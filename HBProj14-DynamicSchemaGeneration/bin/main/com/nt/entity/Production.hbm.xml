<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
		<class name="com.nt.entity.Production" dynamic-insert="true" dynamic-update="true">
			<id name="pid" column="PID" length="20" type="int">
				<generator class="increment"/>
			</id>
			<property name="pname" column="PNAME" type="string" length="30" not-null="true" unique="true"/>
			<property name="pdate" column="PDATE" type="date"/>
		</class>
	</hibernate-mapping>